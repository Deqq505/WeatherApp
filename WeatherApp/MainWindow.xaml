<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E" Foreground="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="#FF252526" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Weather App" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBox x:Name="CityTextBox" Width="300" Padding="10" FontSize="16" Background="#FF333333" Foreground="White" BorderBrush="#FF555555" 
                         Text="Wpisz miasto" GotFocus="CityTextBox_GotFocus" LostFocus="CityTextBox_LostFocus"/>
                <Button x:Name="GetWeatherButton" Content="Szukaj" Width="100" Margin="10,0,0,0" Padding="10" FontSize="16" Background="#FF007ACC" Foreground="White" BorderBrush="#FF005A9E" Click="GetWeatherButton_Click"/>
            </StackPanel>

            
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                
                <Image x:Name="WeatherIcon" Width="100" Height="100" Margin="0,0,20,0"/>
                
                <StackPanel>
                    <TextBlock x:Name="CityText" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
                    <TextBlock x:Name="TemperatureText" FontSize="20" Margin="0,10,0,0"/>
                    <TextBlock x:Name="WeatherDescriptionText" FontSize="16" Margin="0,5,0,0"/>
                    <TextBlock x:Name="HumidityText" FontSize="16" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>

            
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

               
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="Ciśnienie:" FontSize="16"/>
                    <TextBlock x:Name="PressureText" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                
                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="Wschód słońca:" FontSize="16"/>
                    <TextBlock x:Name="SunriseText" FontSize="14" Margin="0,5,0,0"/>
                    <TextBlock Text="Zachód słońca:" FontSize="16" Margin="0,10,0,0"/>
                    <TextBlock x:Name="SunsetText" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>

            
            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <TextBlock Text="Ostatnio wyszukiwane:" FontSize="16" Margin="0,0,0,10"/>
                <ListBox x:Name="HistoryListBox" Height="100" Background="#FF333333" Foreground="White" BorderBrush="#FF555555"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>